contract Manageable is Context, Ownable{

    address[] internal Managers;
    
    modifier onlyManager() { // set attribute related
        _checkManager();
        _;
    }

    function _checkManager () public view{
        require(isManager(_msgSender()), "Ownable: caller is not the manager");
    }

    function isManager (address addr) internal view returns(bool){
        for(uint256 i = 0; i < Managers.length; i++){
            if(Managers[i] == addr){
                return true;
            }
        }
        return false;
    }

    function setManager (address addr) public onlyOwner{
        require(!isManager(addr), "This address has already been manager");
        Managers.push(addr);
    }
}

interface MoverInterface {
    function getMoverInfo(uint256 token_id) external view returns (uint256[8] memory,bool);
}


contract FinC is Context, Ownable, Pausable, ERC20, Manageable{
    using SafeMath for uint256;
    MoverInterface public MoverContract;


    constructor(address MoverContractAddress) ERC20("FinC", "FinC") {
        MoverContract = MoverInterface(MoverContractAddress);
    }




    function manager_mint(address to, uint256 amount, uint256 token_id) public onlyManager {
        uint256[8] memory data;
        bool isClone;
        uint256 level;
        uint256 power;
        uint256 metabolism;
        uint256 coordination;
        uint256 vitality;
        uint256 rarity;
        uint256 lucky;
        uint256 clone;

        (data, isClone) = MoverContract.getMoverInfo(token_id);

        level = data[0];
        power = data[1];
        metabolism = data[2];
        coordination = data[3];
        vitality = data[4];
        rarity = data[5];
        lucky = data[6];
        clone = data[7];


        //calculate how much FinC by Mover attribute
        uint256 total_mint = SafeMath.add(amount, lucky);


        _mint(to, total_mint);
    }
}




